@model ListViewModel

<table class="table">
    <tr>
        <th>Url</th>
        <th>ShortUrl</th>
        <th>Date</th>
        <th></th>
    </tr>
    @foreach (var item in Model.UrlMappingEntries)
    {
        <tr>
            <td>
                <a href="@item.Url" target="_blank">
                    @item.Url
                </a>
            </td>
            <td>
                <a href="@($"https://{Model.Host}/{item.Id}")" target="_blank">
                    @($"https://{Model.Host}/{item.Id}")
                </a>
            </td>
            <td>
                @item.Created
            </td>
            <td>
                <a class="btn btn-danger">
                    Delete
                </a>
            </td>
        </tr>
    }
</table>